package com.jobready.threading;

public class Application {
	
	public static void main(String[] args) { // main thread
		
		System.out.println("Starting Thread 1");
		Task taskRunner = new Task(); // thread 2
		taskRunner.setName("Thread-A");
		taskRunner.start();
		
		System.out.println("Starting Thread 2");
		Task taskRunner2 = new Task();
		taskRunner2.setName("Thread-B");
		taskRunner2.start(); // thread 3, two separate thread running in parallel
		
	}
}

class Task extends Thread{
	public void run() {
		for (int i = 0; i < 100; i++) {
			System.out.println("Number : "+i+" - "+Thread.currentThread().getName());
			try {
				Thread.sleep(10);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
